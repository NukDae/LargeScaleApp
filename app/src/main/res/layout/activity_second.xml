<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.alex.assignment5.SecondActivity" >

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:layout_below="@+id/button_create"
        android:layout_alignLeft="@+id/button_create"
        android:layout_alignStart="@+id/button_create"
        android:layout_alignRight="@+id/button_create"
        android:layout_alignEnd="@+id/button_create"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_create"
        android:src="@drawable/new_building_b"
        android:background="@null"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_go"
        android:layout_alignStart="@+id/button_go"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_go"
        android:src="@drawable/go_building_b"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_pref"
        android:src="@drawable/preferences_b"
        android:background="@null"
        android:layout_below="@+id/button_go"
        android:layout_alignLeft="@+id/button_logout"
        android:layout_alignStart="@+id/button_logout"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_logout"
        android:src="@drawable/logout_b"
        android:background="@null"
        android:layout_below="@+id/button_pref"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alertButton"
        android:src="@drawable/alert_b"
        android:background="@null"
        android:layout_below="@+id/button_logout"
        android:layout_alignLeft="@+id/button_logout"
        android:layout_alignStart="@+id/button_logout"
        android:layout_marginTop="46dp"/>

</RelativeLayout>
