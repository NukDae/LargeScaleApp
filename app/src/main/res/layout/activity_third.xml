<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.alex.helloworld.ThirdActivity" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/button_create"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="97dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choose Layout"
        android:id="@+id/chooseLayoutTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutNameField"
        android:hint="Enter Name"
        android:layout_above="@+id/button_create"
        android:layout_centerHorizontal="true"
        android:text=""
        android:singleLine="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/chooseLayoutTitle"
        android:layout_alignLeft="@+id/layoutNameField"
        android:layout_alignStart="@+id/layoutNameField"
        android:layout_marginTop="57dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layout 1"
            android:id="@+id/layoutB_1"
            android:checked="false"
            android:layout_above="@+id/layoutB_2"
            android:layout_alignRight="@+id/button_create"
            android:layout_alignLeft="@+id/layoutNameField"
            android:layout_alignStart="@+id/layoutNameField"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layout 2"
            android:id="@+id/layoutB_2"
            android:checked="false"
            android:layout_above="@+id/layoutB_3"
            android:layout_alignRight="@+id/button_create"
            android:layout_alignLeft="@+id/layoutNameField"
            android:layout_alignStart="@+id/layoutNameField"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layout 3"
            android:id="@+id/layoutB_3"
            android:checked="false"
            android:layout_above="@+id/layoutB_4"
            android:layout_alignRight="@+id/button_create"
            android:layout_alignLeft="@+id/layoutNameField"
            android:layout_alignStart="@+id/layoutNameField"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layout 4"
            android:id="@+id/layoutB_4"
            android:checked="false"
            android:layout_above="@+id/button_create"
            android:layout_alignRight="@+id/button_create"
            android:layout_alignEnd="@+id/button_create"
            android:layout_marginBottom="53dp"
            android:layout_alignLeft="@+id/layoutNameField"
            android:layout_alignStart="@+id/layoutNameField"/>

    </RadioGroup>

</RelativeLayout>