<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.assignment5.ThirdActivity" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Building"
        android:id="@+id/chooseLayoutTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"/>

    <EditText
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:id="@+id/layoutNameField"
        android:hint="Enter Name"
        android:layout_centerHorizontal="true"
        android:text=""
        android:singleLine="true"
        android:layout_marginTop="280dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_create"
        android:src="@drawable/create_b"
        android:background="@null"
        android:layout_below="@+id/chooseLayoutTitle"
        android:layout_alignRight="@+id/layoutNameField"
        android:layout_alignEnd="@+id/layoutNameField"
        android:layout_marginTop="280dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/chooseLayoutTitle"
        android:layout_centerHorizontal="true">

    </RadioGroup>

</RelativeLayout>